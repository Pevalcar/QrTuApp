---
import { LoginButton } from "@components/LoginButton";
import SwitchDarMod from "@sections/SwitchDarMod.astro";
import { dataGlobal } from "@utils/dataGlobal";
---

<header
  class="bg-prymary-400 w-full flex-col items-center justify-center bg-gradient-to-r py-8"
>
  <div class="flex justify-between gap-4 px-4">
    <SwitchDarMod />
    <LoginButton client:only="preact" />
  </div>
  <h1 class="title">
    {dataGlobal.title}
  </h1>
  <div>
    <p class="subtitle">
      {dataGlobal.DESCRIPTION}
    </p>
  </div>
</header>
